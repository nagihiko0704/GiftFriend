<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rudolphriding.giftfriend.activity.MainActivity">

    <!-- container -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- main content -->

        <RelativeLayout
            android:id="@+id/activity_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TabLayout
                android:id="@+id/activity_main_tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/ut_std_main_mint_03"
                app:tabSelectedTextColor="@color/ut_std_main_mint_03"
                app:tabTextColor="@color/ut_std_text_gray_01">

            </android.support.design.widget.TabLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/activity_main_tablayout"
                android:background="@color/ut_std_main_mint_03"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/activity_main_veiwpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/activity_main_tablayout">



            </android.support.v4.view.ViewPager>
        </RelativeLayout>
    </RelativeLayout>

    <!-- side menu -->

    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <include
            layout="@layout/item_home_sidemenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>