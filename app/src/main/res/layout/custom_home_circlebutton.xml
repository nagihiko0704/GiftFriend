<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/giftcategory_layout"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.rudolphriding.giftfriend.widget.SquareImageButton
        android:id="@+id/giftcategory_button"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_background_round_mint_01"
        android:background="#00000000"/>

    <TextView
        android:id="@+id/giftcategory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1232132"
        android:layout_below="@+id/giftcategory_button"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>